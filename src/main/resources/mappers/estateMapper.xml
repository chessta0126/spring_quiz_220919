<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.quiz.lesson03.dao.RealEstateDAO">  <!-- DAO의 경로 -->
	<!-- Quiz01(select) -->
	<select id="selectRealEstateById"
		resultType="com.quiz.lesson03.model.RealEstate"> <!-- class 경로 -->
		SELECT
		`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
		FROM
		`real_estate`
		WHERE `id`=#{id}
	</select>

	<select id="selectRealEstateByRentPrice"
		resultType="com.quiz.lesson03.model.RealEstate"> <!-- class 경로 -->
		SELECT
		`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
		FROM
		`real_estate`
		WHERE
		<!-- 부등호는 <>가 열렸다고 생각하므로, &lt;(<) , &gt; (>) 로 쓴다.-->
		<!-- `rentPrice` &lt; #{rent_price} -->
		
		<!-- <![CDATA[   ]]>로 감싸도 된다.-->
		<![CDATA[`rentPrice` < #{rent_price}]]>
	</select>

	<select id="selectRealEstateByAreaPrice" parameterType="map"
		resultType="com.quiz.lesson03.model.RealEstate"> <!-- class 경로 -->
		SELECT
		`id`
		,`realtorId`
		,`address`
		,`area`
		,`type`
		,`price`
		,`rentPrice`
		,`createdAt`
		,`updatedAt`
		FROM
		`real_estate`
		WHERE
		`type` = '매매'
		AND `area` >= #{area}
		AND `price` &lt;= #{price}
		<!-- 부등호는 <>가 열렸다고 생각하므로, &lt;(<) , &gt; (>) 로 쓴다.-->
		<!-- <![CDATA[   ]]>로 감싸도 된다.-->
		ORDER BY `id` DESC
		<!-- id는 등록일 순서대로 생성되므로, createdAt 말고 id를 쓰자 -->
	</select>
	
	
	<!-- Quiz02(insert) -->
	<insert id="insertRealEstate" parameterType="com.quiz.lesson03.dao.RealEstateDAO">
		INSERT INTO `real_estate`
		(
			`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{realtorId}
			,#{address}
			,#{area}
			,#{type}
			,#{price}
			,#{rentPrice}
			,NOW()
			,NOW()
		)
	</insert>
	
	<insert id="insertRealEstateAsField" parameterType="map">
	<!-- DAO에서 @Param으로 묶었으므로 parameterType="map"-->
		INSERT INTO `real_estate`
		(
			`realtorId`
			,`address`
			,`area`
			,`type`
			,`price`
			,`rentPrice`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{realtorId}
			,#{address}
			,#{area}
			,#{type}
			,#{price}
			,#{rentPrice}
			,NOW()
			,NOW()
		)
	</insert>
	
	
	<!-- Quiz 03 (UPDATE) -->
	<update id="updateRealEstateById" parameterType="map">
    <!-- DAO에서 @Param으로 묶었으므로 parameterType="map"-->
    	UPDATE `real_estate`
    	SET
    		`type` = #{type}
    		,`price` = #{price}
    		,`updatedAt` = NOW()
    	
    </update>
	
	<!-- Quiz 04 (DELETE) -->
	<delete id="deleteRealEstateById" parameterType="int">
		DELETE
		FROM `real_estate`
		WHERE
			`id` = #{id}
	</delete>
</mapper>